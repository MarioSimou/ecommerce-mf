{
  "compilerOptions": {
    "target": "ESNext",                                    
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowJs": true,
    "jsx": "react",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@hooks": ["./src/hooks/index.ts"],
      "@types": ["./src/@types/index.ts"],
      "@public/*": ["./src/public/*"]
    }                                
  }
}
